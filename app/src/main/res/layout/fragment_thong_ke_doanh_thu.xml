<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgr"
    tools:context=".Fragments.ThongKeDoanhThuFragment">


    <TextView
        android:layout_marginTop="150dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày bắt đầu"
        android:textColor="#ffffff"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/edtNgayBatDau"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="22sp"
        android:hint="Chọn ngày bắt đầu"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />
    <TextView
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày kết thúc"
        android:textColor="#ffffff"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/edtNgayKetThuc"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="22sp"
        android:hint="Chọn ngày kết thúc"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_pink"
        android:text="Thống Kê"
        android:id="@+id/btnThongke"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/edtDoanhThu"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:hint="Doanh Thu"
        android:layout_gravity="center"
        />
</LinearLayout>