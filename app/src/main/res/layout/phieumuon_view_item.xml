<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    android:backgroundTint="@color/white"
    android:id="@+id/cardPhieuMuon">
    <RelativeLayout
        android:padding="8dp"
        android:id="@+id/relativeCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTenThanhVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Tên Thành Viên"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25sp"
            android:textStyle="bold|italic" />
        <TextView
            android:id="@+id/tvMaThanhVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenThanhVien"
            android:layout_alignParentLeft="true"
            android:text="Mã Thành Viên"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvMaPhieuMuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMaThanhVien"
            android:layout_alignParentLeft="true"
            android:text="Mã Phiếu Mượn"

            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvTenThuThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMaPhieuMuon"
            android:layout_alignParentLeft="true"
            android:text="Thủ Thư"

            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvMaThuThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenThuThu"
            android:layout_alignParentLeft="true"
            android:text="Mã Thủ Thư"

            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTenSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMaThuThu"
            android:layout_alignParentLeft="true"
            android:text="Tên Sách"

            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvMaSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenSach"
            android:layout_alignParentLeft="true"
            android:text="Mã Sách"

            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvNgay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvMaSach"
            />
        <TextView
            android:id="@+id/tvTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Tiền"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvNgay"
            />
        <TextView
            android:id="@+id/tvTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng Thái"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvTien"
            />
        <ImageView
            android:id="@+id/ivTraSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trasach"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="90dp"
            />
        <ImageView
            android:id="@+id/ivKhongTraSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chuatra"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="90dp"
            />
        <ImageView
            android:id="@+id/ivDeletePM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_marginTop="8dp"
            android:layout_below="@id/ivTraSach"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>